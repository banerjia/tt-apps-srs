@using System.Globalization
@using tt_apps_srs.Models
@model ClientStoreOrder
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 order-lg-2 order-md-2">
                <div class="card border-primary">
                    <div class="card-header"><span class="h4">Store</span></div>
                    <div class="card-body">
                        @Model.ClientStore.Store.Name<br />
                        <address>
                            @Model.ClientStore.Store.Address
                        </address>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 order-lg-1 order-md-1">
                <div class="card card-sm border-secondary">
                    <div class="card-header">
                        <span class="h4">Order Details</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong>ID:</strong>
                                    @Model.Id
                                </p>
                                <p>
                                    <strong>Total:</strong>
                                    @Model.Total.ToString("c")
                                </p>
                                <p>
                                    <strong>Date Created:</strong>
                                    @Model.CreatedAt
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2 class="h2">Products</h2>
                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Item</th>
                            <th scope="col">Cost</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="order_items">
                    @foreach(ClientStoreOrderProduct item in Model.Items)
                    {
                        <tr>
                            <th>@item.ClientRetailerProduct.Name</th>
                            <td style="text-align:center">@item.UnitPrice.ToString("c")</td>
                            <td style="text-align:center">@((int)item.Quantity)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
