@model tt_apps_srs.Models.Store
@using System.Globalization
@{
    TextInfo textInfo = new CultureInfo("en-US", false).TextInfo;
}
<div class="row" style="margin-bottom:1em">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a class="btn btn-primary btn-md" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-pencil-alt"></i>
            <span class="hidden-sm hidden-lg">Edit</span>
        </a>
        <a class="btn btn-primary btn-md" href="#">
            <i class="fas fa-cart-plus"></i>
            <span class="hidden-sm hidden-lg">Create an Order</span>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-12"><label>Status</label></div>
            <div class="col-12">
                @if(Model.Active)
                {
                    <i class="fas fa-circle text-success"></i> 
                    <span class='text-success'>Active</span>
                }
                else
                {
                    <i class="fas fa-circle text-warning"></i> 
                    <span class='text-warning'>Inactive</span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label>Retailer</label>
            </div>
            <div class="col-12">@textInfo.ToTitleCase(Model.Retailer.Name.ToLower())</div>
        </div>
        <div class="row">
            <div class="col-12"><label>Location Number</label></div>
            <div class="col-12">@Model.LocationNumber</div>
        </div>
        <div class="row">
            <div class="col-12"><label>Address</label></div>
            <div class="col-12">
                <address>
                    @textInfo.ToTitleCase(Model.Address.ToLower())
                </address>
            </div>
        </div>
        @if (!String.IsNullOrEmpty(Model.Phone))
        {
            <div class="row">
                <div class="col-12"><label>Phone</label></div>
                <div class="col-12"><tel>@Model.Phone</tel></div>
            </div>

        }
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="panel panel-default">   
            <div class="panel-body">
                <div id="gmap_StoreLocation"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        // Initialize and add the map
        function initMap() {
            // The location of Uluru
            var uluru = { lat: @Model.Latitude, lng: @Model.Longitude };
            // The map, centered at Uluru
            var map = new google.maps.Map(
                document.getElementById('gmap_StoreLocation'), 
                { 
                    zoom: 17, 
                    center: uluru,
                    disableDefaultUI: true,
                    zoomControl: true
                 });
            // The marker, positioned at Uluru
            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: '@Model.Name - @Model.LocationNumber',
                animation: google.maps.Animation.DROP
            });
        }
    </script>
    <script async defer type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA47sqq4fHReCXHT3UTFGaLgulC5sooxt8&callback=initMap">
    </script>
}
@section Head
    {
    <style>
        /* Set the size of the div element that contains the map */
        #gmap_StoreLocation {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
        }
    </style>
}